generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum AdmissionStatus {
  APPLIED
  WAITING
  REGISTERED
  SELECTED
  REJECTED
}

enum DocumentStage {
  APPLIED
  VERIFIED
  APPROVED
  REJECTED
}

enum UserRole {
  ADMIN
  SUBADMIN
  STUDENT
}
model Program {
  id              String                @id @default(uuid())
  name            String                @db.VarChar(100)
  programType     String                @db.VarChar(20) // UG, PG, Diploma
  durationYears   Int
  description     String?
  seats           ProgramSeat[]
  fees            FeeStructure[]
  eligibility     EligibilityCriteria[]
  students        Student[]
  placements      PlacementRecord[]
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
}

model ProgramSeat {
  id             Int       @id @default(autoincrement())
  totalSeats     Int
  reservedSeats  Int
  openSeats      Int
  program        Program   @relation(fields: [programId], references: [id])
  programId      String
}